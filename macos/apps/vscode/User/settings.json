{
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "on",
    "editor.wordWrap": "on",
    "editor.autoIndent": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.tabSize": 4,
    "[html]": {
        "editor.tabSize": 2
    },
    "[erb]": {
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Popping and Locking",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87"
    },
    "workbench.startupEditor": "none",
    "terminal.integrated.fontFamily": "Knack Nerd Font",
    "terminal.external.osxExec": "iTerm.app",
    "workbench.iconTheme": "vscode-icons",
    "projectManager.groupList": true,
    "projectManager.git.baseFolders": [
        "$home/Documents/git"
    ],
    "files.autoSave": "onWindowChange",


    // Emmet
    "emmet.extensionsPath": "/Users/corey/dotfiles/macos/apps/vscode/snippets",
    "emmet.includeLanguages": {
        "erb": "html"
    },

    // Vim Settings
    "vim.leader": "<space>",
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.autoindent": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.easymotion": false,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.overrideCopy": true,
    "vim.substituteGlobalFlag": true,
    "vim.cmdLineInitialColon": true,
    "vim.visualstar": true,
    "vim.searchHighlightColor": "rgba(255, 1, 81, 0.3)",
    "vim.statusBarColorControl": true,
    // These will cause Code Helper to dominate CPU
    // "vim.statusBarColors": {
    //     "normal": "#005f5f",
    //     "insert": "#5f0000",
    //     "visual": "#5f00af",
    //     "visualline": "#005f87",
    //     "visualblock": "#86592d",
    //     "replace": "#000000"
    // },
    "vim.insertModeKeyBindingsNonRecursive": [{
        "before": ["j", "j"],
        "after": ["<Esc>", "j"]
    }],
    "vim.otherModesKeyBindingsNonRecursive": [{
            "before": ["<leader>", "w"],
            "after": [],
            "commands": [{
                "command": "workbench.action.files.save",
                "args": []
            }]
        },
        {
            "before": ["<leader>", "q"],
            "after": [],
            "commands": [{
                "command": "workbench.action.closeActiveEditor",
                "args": []
            }]
        },
        {
            "before": ["u"],
            "after": [],
            "commands": [{
                "command": "undo",
                "args": []
            }]
        },
        {
            "before": ["U"],
            "after": [],
            "commands": [{
                "command": "redo",
                "args": []
            }]
        },
        {
            "before": ["z"],
            "after": [],
            "commands": [{
                "command": ":noh"
            }]
        },
        {
            "before": ["Z", "Z"],
            "after": [],
            "commands": [{
                    "command": "workbench.action.files.save",
                    "args": []
                },
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["<BS>"],
            "after": ["d", "h"]
        },
        {
            "before": [";"],
            "after": [],
            "commands": [{
                "command": "editor.action.commentLine",
                "args": []
            }]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
    ],
    "files.eol": "\n",
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "tmp": true
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "search.useIgnoreFiles": false
}
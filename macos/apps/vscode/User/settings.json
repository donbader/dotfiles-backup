{
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "on",
    "editor.wordWrap": "on",
    "editor.autoIndent": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.tabSize": 4,
    "[html]": {
        "editor.tabSize": 2
    },
    "[erb]": {
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "[haml]": {
        "editor.tabSize": 2
    },
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Popping and Locking",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87"
    },
    "workbench.startupEditor": "none",
    "terminal.integrated.fontFamily": "Knack Nerd Font",
    "terminal.external.osxExec": "iTerm.app",
    "workbench.iconTheme": "vscode-icons",
    "projectManager.groupList": true,
    "projectManager.git.baseFolders": [
        "$home/Documents/git"
    ],
    "files.autoSave": "onWindowChange",


    // Emmet
    "emmet.extensionsPath": "~/dotfiles/macos/apps/vscode/User/snippets",
    "emmet.includeLanguages": {
        "erb": "html"
    },

    "files.eol": "\n",
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "tmp": true
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "search.useIgnoreFiles": false,
    "alignment.surroundSpace": {
        "colon": [
            -1,
            3
        ],
        "assignment": [
            1,
            1
        ],
        "arrow": [
            1,
            1
        ],
        "comment": 2
    },
    "powermode.enabled": true,
    "powermode.explosionSize": 10,
    "powermode.shakeIntensity": 1,
    "gitlens.keymap": "alternate"
}}